doctype html
html
  head
    meta(charset='utf-8')

    title= data.title

    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='/admin/static/css/normalize.css', rel='stylesheet')
    link(href='/admin/static/css/fontawesome.css', rel='stylesheet')
    link(href='/admin/static/css/admin.css', rel='stylesheet')

    block scripts
      script(src='/admin/static/js/modernizr.custom.js')
      script(src='/admin/static/js/jquery.js')
      script(src='/admin/static/js/admin.js')

  body
    block container
      .admin-container
        .openmenu
          a(data-togglemenu).fa.fa-bars.open
          block title
        .menu(data-menu)
          a(data-togglemenu).fa.fa-close.close
          block menu
            h2 KapowCMS
            ul.block-menu
              li(class=data.page == 'new'?'active':''): a(href='/admin/new')
                span.fa.fa-pencil.fa-fw
                | New Post
              li(class=data.page == 'list'?'active':''): a(href='/admin/')
                span.fa.fa-th-list.fa-fw
                | Posts
              li(class=data.page == 'media'?'active':''): a(href='/admin/media')
                span.fa.fa-image.fa-fw
                | Media
              li(class=data.page == 'settings'?'active':''): a(href='/admin/settings')
                span.fa.fa-cogs.fa-fw
                | Settings
            ul.bottommenu.block-menu
              li: a(href='/admin/logout')
                span.fa.fa-arrow-left.fa-fw
                | Logout
        .content
          block body
